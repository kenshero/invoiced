<div class="container">

	<div class="container">
		<ol class="breadcrumb">
		  	<li><%= link_to 'Customers',customers_path,class: "active" %></li>
		</ol>		
	</div>

	<div class="row">
		<%= form_tag customers_path , method: :get do %>
			<div class="col-md-9">
				 <%= text_field_tag :q,params[:q] ,class: "form-control" %>
			</div>

		  <div class="col-md-1">
				<%= select_tag :op, options_for_select([['All', 1], ['firstname', 2], ['lastname', 3],
				 ['address', 4], ['phone', 5]],selected: params[:op] ) %>
		  </div>	

			<div class="col-md-1">
				<%= button_tag 'Search',:class => "btn btn-default", name: nil %>
			</div>
		<% end %>

		<div class="col-md-1">
			<%= link_to '+Add', new_customer_path,:class => "btn btn-primary" %>
		</div>
	</div>

	<div class="row">
		<table class="table table-striped">
			<thead>
				<th>No.</th>
				<th>FirstName</th>
				<th>LastName</th>
				<th>Address</th>
				<th>Phone</th>
				<th>Tools</th>
			</thead>
			<tbody>
				<% @customers.each_with_index do |customer , i| %>
				<tr>
					<td><%= i+1 %></td>
					<td><%= customer.firstname %></td>
					<td><%= customer.lastname %></td>
					<td><%= customer.address %></td>
					<td><%= customer.phone %></td>
					<td>
						<%= link_to 'Invoices', customer_invoices_path(customer),
							class: "btn btn-success"%>
						<%= link_to 'Edit', edit_customer_path(customer),
							class: "btn btn-warning"%>
						<%= link_to 'Delete', customer_path(customer),
             				method: :delete,
            				data: { confirm: 'Are you sure?' },
            				class: "btn btn-danger" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>		
	</div>
</div>