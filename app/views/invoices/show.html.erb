<%= render "layouts/header" %>

<div class="container panel panel-default">
	<div class="row panel-body">
	<%= form_for @invoice do |f| %>
		<div class="form-group">
		    <h3>Invoice_number :</h3>
		    <%= f.text_field :invoice_number ,class: "form-control",disabled: true  %>
		</div>	

		<div class="form-group">
		    <h3>Issue_date :</h3>
		    <%= f.text_field :issue_date ,class: "form-control",disabled: true  %>
		</div>

		<div class="form-group">
		    <h3>Issue_date :</h3>
		    <%= f.text_field :due_date ,class: "form-control",disabled: true  %>
		</div>	

		<h1>Line Item</h1>
		<%= f.fields_for :line_items,class: "" do |item|  %>
		
		  <div class="form-inline fields line-items">
			  <div class="form-group">
			    <label>Product Name :</label>
			    <%= item.text_field :product ,class: "form-control",disabled: true  %> 
			  </div>

			  <div class="form-group">
			    <label>Quanity :</label>
			    <%= item.text_field :qty ,class: "form-control",disabled: true %>
			  </div>

			  <div class="form-group">
			    <label>Price :</label>
			    <%= item.text_field :price ,class: "form-control",disabled: true %>
			  </div>
		  </div>
		<% end %>

		<div class="form-group">
		    <h2>Sub Total : <%= @invoice.total %></h2>
		    <h3>vat 7%: <%= (@invoice.total*0.07).round(2) %></h3>
		    <h1>Total : <%= @invoice.total+(@invoice.total*0.07).round(2) %></h1>
		</div>

	<% end %>	
	 <%= link_to '<<Back', invoices_path,class: "label label-primary" %>
	</div>
</div>